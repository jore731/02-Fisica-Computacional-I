{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Make html",
            "type": "shell",
            "command": "docs/make html",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Make latexpdf",
            "type": "shell",
            "command": "docs/make latexpdf",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Show index",
            "type": "shell",
            "command": ".\\index.html",
            "options": {
                "cwd": "${workspaceFolder}/docs/build/html/"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Show pdf",
            "type": "shell",
            "command": ".\\pec2-c.pdf",
            "options": {
                "cwd": "${workspaceFolder}/docs/build/latex/"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build and show pdf",
            "type": "shell",
            "command": ".\\pec2-c.pdf",
            "options": {
                "cwd": "${workspaceFolder}/docs/build/latex/"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOrder": "sequence",
            "dependsOn": ["Make latexpdf","Show pdf"]
        },
        {
            "label": "compile C",
            "type": "shell",
            "command": "gcc -std=c99 -o build\\main main.c PEC2Lib.c PEC2Lib.h ejercicio1.c ejercicio1.h ejercicio2.c ejercicio2.h ejercicio3.c ejercicio3.h ejercicio4.c ejercicio4.h",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run main",
            "type": "shell",
            "command": "build\\main.exe",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "BUILD PEC",
            "command": "C:\\Program Files (x86)\\Dev-Cpp\\MinGW64\\bin\\gcc.exe",
            "args": [
                "-g",
                "${file}",
                "-o","${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "C:\\Program Files (x86)\\Dev-Cpp\\MinGW64\\bin"
            }
        }
    ]
}